#!/bin/sh
set -e

rm -rf ./opt
mkdir -p ./opt/bin \
         ./opt/extensions

yum-config-manager --add-repo https://pkgs.tailscale.com/stable/amazon-linux/2/tailscale.repo
yum -y install tailscale

cp ./src/live-development-proxy.sh ./opt/extensions/live-development-proxy.sh

cp /usr/bin/tailscale ./opt/bin/tailscale
cp /usr/sbin/tailscaled ./opt/bin/tailscaled
